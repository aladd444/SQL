--Display the database ordered by price.

SELECT * FROM marios
ORDER BY price asc;

--What is the average price of items in the store?

SELECT AVG(PRICE)
FROM MARIOS;

--What are the 5 most expensive items in the store?

SELECT NAME,PRICE
FROM MARIOS
ORDER BY PRICE DESC
limit 5;
